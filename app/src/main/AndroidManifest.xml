<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name="com.thecocktailapp.TheCocktailApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheCocktailApp"
        tools:targetApi="31">
        <activity
            android:name="com.thecocktailapp.presentation.view.activities.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.TheCocktailApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thecocktailapp.presentation.view.activities.KotlinActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.TheCocktailApp.ActionBar" />
    </application>

</manifest>